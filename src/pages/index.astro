---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Terminal">
  <div class="index-content framed">
  <h1 id="hello-there">Hello there!</h1>
  <p>I'm Yash. This is my little corner of the internet where I write, build things, and occasionally release odd little games.</p>
  <p>Feel free to browse the posts and projects.</p>
  </div>
  
  <div class="posts">
    {posts.map((post) => <PostCard post={post} />)}
  </div>
</BaseLayout>